<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <!--左側-->
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>

      <div class="row">
        <a class="btn btn-outline-secondary btn-block edit_user_19207" href="/users/19207/edit">user編集</a>
      </div>

      <h2 class="mt-3">New book</h2>

      <%= form_with model: @book_new do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title %>
      </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create Book' %>
      </div>
      <% end %>

      <!--右側-->
      <div class="col-md-8 offset-md-1">
       <h2>Book detail</h2>
       <table class="table-hover table-inverse">
        <thead>
         <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
         </tr>
        </thead>
        <tbody>
           <tr>
               <td>
                 <%= link_to user_path(@user.id) do %>
                  <%= image_tag @book.user.get_profile_image(100,100) %><br />
                  <%= @user.name %>
                 <% end %>
               </td>
               <td><%= link_to @book.title, book_path(@book.id) %></td>
               <td><%= @book.body %></td>
              <% if @book.user == current_user %>
               <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
               <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
              <% else %>
               <td></td>
               <td></td>
              <% end %>
           </tr>
        </tbody>
       </table>
      </div>

    </div>
  </div>
</div>