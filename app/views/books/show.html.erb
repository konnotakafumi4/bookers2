<p id="notice"><%= flash[:notice] %></p>
<div class="container">
  <div class="row">

   <div class="col-md-3">
    <%= render 'books/list', user: @user, book_new: @new_book %>
   </div>

   <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
     <table class="table">
      <tbody>
       <tr>
         <td>
          <%= link_to user_path(@user.id) do %>
           <%= image_tag @book.user.get_profile_image(100,100) %><br />
           <%= @user.name %>
          <% end %>
         </td>
         <td><%= link_to @book.title, book_path(@book.id) %></td>
         <td><%= @book.body %></td>
        <% if @book.user == current_user %>
         <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success edit_book_15615" %></td>
         <td><%= link_to "Destroy", book_path(@book.id), class:"btn btn-sm btn-danger destroy_book_15615", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
        <% end %>
       </tr>
      </tbody>
     </table>
   </div>

   </div>
 </div>
</main>